# Example environment configuration for BankingLLM
# Copy to .env and modify as needed

# Database Configuration
DATABASE_URL=sqlite:///./data/bank.db

# LLM Configuration
OLLAMA_BASE_URL=http://localhost:11434
LLM_MODEL=llama3.1:8b

# Data Generation Settings
NUM_CLIENTS=10000
NUM_ACCOUNTS_PER_CLIENT_RANGE=(1,3)
NUM_TRANSACTIONS=1000000

# Excel Export
EXCEL_OUTPUT_DIR=./data/exports

# Logging
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Web UI Settings
WEB_HOST=0.0.0.0
WEB_PORT=8501